#include <stdio.h>
#include <stdlib.h>

void main () {

// Criando variaveis
char letra = 'x';

// Condicional simples
if (letra == 'x') {
printf("\n A letra eh x");
}

printf("\nCodigo da letra = %d, letra");

if (letra == 120) {
    printf("\n a letra eh x");
}
// Pausando o sistema
system ("pause");}
